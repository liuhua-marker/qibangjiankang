/* pages/logisticsInformation/logisticsInformation.wxss */
page{
  height: 100%;
}
.content{
  height: 100%;
  background: #F7F4F8 ;
}
.loginstics_panel{
  text-align: left;
  padding:30rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #ddd;
}
.flex_panel{
  display: flex;
}
.left_text{
  color:#666;
  padding:0 20rpx 20rpx 0;
}
.right_text{
  color:#333;
}
.copy_img{
  width:40rpx;
  margin-left:20rpx ;
}
/*时间轴*/

/*外部容器*/
.listview-container {
	margin: 10rpx 10rpx;
}
.time_panel{
  width:200rpx;
  word-wrap: break-word;
  font-size: 28rpx;
  color: #999;
  padding-top:20rpx;
  text-align: center;
}
/*行样式*/
.playlog-item {
	display: flex;
}

/*时间轴*/
.playlog-item .dotline {
	width: 35px;
	position: relative;
}

/*竖线*/
.playlog-item .dotline .line {
	width: 1px;
	height: 100%;
	background: #ccc;
	position: absolute;
	top: 0;
	left: 15px; 
}
.playlog-item .dotline .line:first-child{
  top:22rpx
}
/*圆点*/
.playlog-item .dotline .dot {
	width: 11px;
	height: 11px; 
	background: #30ac63;
	position: absolute; 
	top: 10px; 
	left: 10px; 
	border-radius: 50%; 
}

/*时间戳*/
.playlog-item .dotline .time {
	width: 100%;
	position: absolute;
	margin-top: 30px;
	z-index: 99;
	font-size: 12px;
	color: #777;
	text-align: center;
}

/*右侧主体内容*/
.playlog-item .content {
	width: 100%;
	display: flex;
	flex-direction: column;
	border-bottom: 1px solid #ddd;
	margin: 3px 0;
}

/*章节部分*/
.playlog-item .content .chapter {
	font-size: 30rpx;
	line-height: 60rpx;
	color: #444;
	white-space: normal;
	padding-right: 10px;
}

/*课程部分*/
.playlog-item .content .course {
	font-size: 28rpx;
	line-height: 56rpx;
	color: #999;
}

/*上拉加载提示*/
.loading-indicator {
	text-align: center;
	font-size: 12px;
	margin: 10px 0;
}