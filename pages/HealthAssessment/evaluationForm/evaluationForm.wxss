.container-box {
  background-color: #efeff4;
  height: 100vh;
  box-sizing: border-box;
  /* padding: 8px 15px; */
  font-size: 30rpx;
}
button {
  display: inline-block;
  width: 85px;
  height: 38px;
  border-radius: 40px;
  font-size: 14px;
}
.buttons {
  width: 200rpx;
  height: 80rpx;
  line-height: 78rpx;
  background-color: rgba(189, 64, 68, 1);
}
.buttons::after{
  border:none;
  color:#fff;
}
.btn_plain[plain]{
  border:1px solid rgba(181,181,181,1);
box-shadow:0px 3rpx 7rpx 0px rgba(0, 0, 0, 0.35);
color:rgba(50,47,47,1);
}
.btn_plain[plain]::after{
  border:none
}
.panel{
  padding: 0 40rpx;
}
.container-head {
  background-color: #fff;
  color: rgba(51, 51, 51, 1);
  line-height: 20px;
  margin-bottom: 20px;
  padding: 30rpx 40rpx;
  font-size: 26rpx;
  /* border-radius: 8px; */
}
.container-bar {
  height: 25px;
  background: rgba(241, 145, 73, 1);
  color:#fff;
  line-height: 50rpx;
  padding: 30rpx 40rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content:center
}
.progress-text {
  display: inline-block;
  text-align: center;
  padding:0 20rpx;
}
progress {
  width: 440rpx;
  border-radius: 5px;
  vertical-align: middle;
}
.container-body {
  min-height: 45px;
  background-color: #fff;
  padding: 20px;
  margin-top: 10px;
  border-radius: 20px;
}
.body-title {
  font-size: 16px;
  font-weight: normal;
  color:rgba(51, 51, 51, 1)
}
.radio{
  color:rgba(102, 102, 102, 1);
}
radio .wx-radio-input {
  background: transparent;
  height: 0rpx;
  width: 0rpx;
}
/* 选中后的 背景样式 */
radio .wx-radio-input.wx-radio-input-checked {
  border: none;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before {
  background: transparent;
  color: transparent;
  width: 0rpx;
  height: 0rpx;
}
.radio-group {
  font-size: 14px;
}
.radio {
  background: transparent;
  margin: 7px 0;
  padding: 8px;
}
.radio-checkerd {
  background: #eee;
  color:rgba(189, 64, 68, 1);
}
.container-button {
  position: fixed;
  left: 5%;
  bottom: 2%;
  width: 90%;
  box-sizing: border-box;
  /* padding-right: 10px; */
}

.fr {
  float: right
}
.btn_organ[type=warn]{
  background: rgba(241, 145, 73, 1);
}