/* pages/contractedStore/contractedStore.wxss */
page{
  height: 100%;
}
.panel{
  height: 100%;
}
.top_panel {
  height: 270rpx;
}
.center_box {
  padding:20rpx;
  top:60rpx;
}
.item_top {
  padding: 0 0 10rpx 0;
  font-size: 44rpx;
  font-weight: bold;
  color: #BD4044;
  max-height: 100%;
  word-break: break-all;
  margin-top:10rpx;
}
.left_box{
  text-align: left;
}
.gray_text{
  color:#666;
  font-size: 26rpx;
}
.money_style{
  font-size: 28rpx;
  font-weight: normal;
}
.color_666{
  color: #666;
  vertical-align: middle;
}
.font_14{
  font-size: 28rpx;
}
.title{
  text-align: center;
  font-size: 34rpx;
  color:#333;
  height: 80rpx;
}
.table_panel{
  margin:0 30rpx;
  border-radius: 20rpx;
  height: calc(100% - 370rpx);
  background: #fff;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.1);
  text-align: center;
}
.flex_top{
  font-size: 34rpx;
  border-bottom: 1px solid #DCDCDC;
}
.flex_table_item{
  min-width: 33%;
  line-height: 100rpx;
}
.flex_table_item_td{
  padding:30rpx 0;
}
.width_60{
  width: 60%;
}
.width_40{
  width: 40%;
}
.arrow_style{
  width:14rpx;
  height: 28rpx;
  vertical-align: middle;
  margin: 5rpx 30rpx 0 0;
  float: right;
}
.margin_r{
  padding-right:40rpx
}
.right_item .item_top{
  color:#DAB68F;
}
.font_34{
  font-size: 34rpx;
}