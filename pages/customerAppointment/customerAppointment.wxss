/* pages/customerAppointment/customerAppointment.wxss */
page,.panel{
  height: 100%;
  background: #F5F5F5;
}
.panel{
  height: calc(100% - 120rpx);
}
.data_panel{
  padding:30rpx;
}
.month{
  font-size: 36rpx;
  font-style:italic;
  color:#333;
  position: relative;
  padding:30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.date_panel{
  background: #fff;
  position: relative;
  border-radius: 20rpx;
  padding:20rpx 0;
}
.hidden{
  height: 130rpx;
  overflow: hidden;
}
.flex_panel{
  display:flex;
  padding:10rpx 30rpx 10rpx 0; 
}
.flex_panel>view{
  flex-grow: 1;
  text-align: center;
}
.down_arrow{
  width:30rpx;
  transform: rotate(-90deg);
  margin-left: 30rpx;
  vertical-align: middle;
  transition: transform 0.3s linear;
}
.arrow_top{
  transform: rotate(90deg);
}
.hidden .down_arrow{
  transform: rotate(90deg);
  transition: transform 0.3s linear;
}
.top_text{
  font-size: 30rpx;
  color:#333;
  line-height: 60rpx;
}
.bottom_num{
  font-size: 36rpx;
  color:#666;
  height: 70rpx;
  line-height: 70rpx;
  width: 70rpx;
  margin: 0 auto;
}
.active{
  width: 70rpx;
  background: #BD4044;
  border-radius: 70rpx;
  margin: 0 auto;
  color:#fff
}
.date_arrow{
  position: absolute;
  right: 0;
  top:40rpx;
  padding:20rpx;
}
.date_arrow>.down_arrow{
  margin:0
}
.btn_panel{
  display: flex;
}
.btn_panel>view{
  flex-wrap: 1;
}
.list_panel{
  padding:20rpx 20rpx 0 20rpx;
  background:#fff;
  margin:0 30rpx 20rpx 30rpx;
}
.btn_sty{
  font-size: 36rpx;
  color:#333;
  padding-bottom: 10rpx;
}
.btn_active{
  border-bottom: 2px solid #BD4044;
  color:#BD4044;
}
.list_box{
  padding:30rpx 0;
}
.list{
  padding:0 30rpx;
  border-left: 2px solid #BD4044;
  line-height: 60rpx;
  margin-bottom: 30rpx;
}
.align_left{
  text-align: left;
}
.time_sty{
  font-size: 36rpx;
  font-weight: bold;
  color:#333;
}
.center_sty{
  font-size: 32rpx;
  color:#666;
  margin-left: 30rpx;
}
.bottom_sty{
  font-size: 32rpx;
  color: #999;
}
.name_sty{
  text-align: right;
  line-height: 100rpx;
}
.btn_style{
  position: fixed;
  bottom:30rpx;
  left: 40rpx;
  right:40rpx;
  display: block;
  background: #BD4044;
  font-size: 34rpx;
  line-height: 100rpx;
  z-index: 100;
  color:#fff;
  border-radius: 100rpx;
  text-align: center;
}