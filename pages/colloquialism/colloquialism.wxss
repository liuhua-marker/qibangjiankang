.tabber_panel{
   position: fixed;
   top:0;
   left: 0;
   width: 100%;
   display: flex;
   /* border-bottom: 1px solid #dcdcdc; */
   background: #fff;
   z-index: 100;
}
.tab_item{
  text-align: center;
  flex-grow: 1;
  height: 50rpx;
  padding:15rpx 1px ;
  /* border-right:1px solid #D2D2D2;  */
  font-size: 32rpx;
  color:#666666;
  background: #F5F5F5;
}
.tab_item>text{
  line-height: 50rpx;
  display: inline-block;
  width:100%;
  border-right:2px solid #D2D2D2; 
}
.tab_active{
  font-size: 34rpx;
  background: #fff;
  color: #BD4044;
  border-bottom: 2px solid #BD4044;
}
.btn_style{
  position: fixed;
  bottom:30rpx;
  left: 20rpx;
  right:20rpx;
  display: block;
  background: #BD4044;
  font-size: 34rpx;
  line-height: 100rpx;
  z-index: 100;
  color:#fff
}