page {
  height: 100%;
}
view,image,text,navigator {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  }
  
.container {
  background: #fff;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding:0 0 140rpx 0;
}

.banner {
  width: 750rpx;
  /* height: 400rpx; */
  /* height: 417rpx; */
}

.banner image {
  width: 100%;
  /* height: 417rpx; */
  height: 400rpx;
}

.banner-bz {
  width: 750rpx;
  height: 70rpx;
  background: #fff;
  overflow: hidden;
  padding: 0rpx 0rpx 45rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}

.banner-bz .item image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.banner-bz .item {
  padding: 15rpx 0rpx;
  width: 33.333%;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}

.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}

.catalog .nav {
  width: 162rpx;
  height: 100%;
  background: #f9f9f9;
}

.catalog .nav .item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #333;
  font-size: 28rpx;
}

.catalog .nav .item.active {
  color: #000;
  font-weight: 600;
  background: #fff;
}

.catalog .cate {
  border-left: 1px solid #fafafa;
  flex: 1;
  height: 100%;
  padding: 10rpx;
  /* padding-bottom: 100rpx; */
}

.banner {
  display: block;
  /* height: 222rpx; */
  width: 100%;
  position: relative;
}

.banner .image {
  position: absolute;
  top: 30rpx;
  left: 0;
  border-radius: 4rpx;
  height: 192rpx;
  width: 100%;
}

.banner .txt {
  position: absolute;
  top: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  left: 0;
  height: 192rpx;
  line-height: 192rpx;
  width: 100%;
}

.catalog .hd {
  height: 108rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.catalog .hd .txt {
  font-size: 24rpx;
  text-align: center;
  color: #333;
  padding: 0 10rpx;
  width: auto;
}

.catalog .hd .line {
  width: 40rpx;
  height: 1px;
  background: #d9d9d9;
}

.catalog .bd {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.catalog .bd .item {
  display: block;
  float: left;
  height: 216rpx;
  width: 144rpx;
  margin-right: 34rpx;
}

.catalog .bd .item.last {
  margin-right: 0;
}

.catalog .bd .item .icon {
  height: 144rpx;
  width: 144rpx;
}

.catalog .bd .item .txt {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  height: 72rpx;
  width: 144rpx;
}

.empty-view {
  background: #fff;
}

.product-item {
  margin: 10rpx 0px 0px 0px;
  border-radius: 10rpx;
  height: 210rpx;
  padding: 10rpx;
  background: #fff;
   border-bottom: 1px solid #eee;
}

.product-item image {
  width: 170rpx;
  height: 170rpx;
  float: left;
  border-radius: 10rpx;
  margin: 10rpx;
}

.product-item .name {
  display: block;
  color: #333;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 5rpx;
  font-weight: 600;

}
.product-item .price {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-top:45rpx;
  color:red;
}
.product-item .buy {
  float: right;
display: block;
font-size: 40rpx;
border-radius: 50%;
font-weight: 600;
margin-top: 38rpx;
color: #fff;
background: #00BB00;
width: 60rpx;
height: 60rpx;
text-align: center;

}

.cart{
  position:fixed;
  bottom: 0rpx;
  height:100rpx;
  background: #fff;
  width: 100%;


}
.cart .cart-img {
  position: fixed;
  bottom: 10rpx;
  padding: 10rpx;
}

.cart .cart-img image{
  width:110rpx;
  height:110rpx;
  border-radius: 50%;
  padding:30rpx;
  background: #eee	;
}
.cart .amount{
  float: left;
  background: #fff;
  color: red;
  font-size: 45rpx;
  margin-left: 140rpx;
  line-height: 50px;

}
.cart .buy-btn{
  float: right;
  background: #00BB00;
  color: #fff;
  font-size: 30rpx;
  height: 100%;
  line-height: 100rpx;
  width: 200rpx;
  text-align: center
}

.cart .number{
  background: red;
  padding: 0 10rpx;
  color: #fff;
  font-size: 20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: fixed;
  bottom: 100rpx;
  z-index: 100;
  border-radius: 50%;
  left: 80rpx;
  text-align: center;
}




.attr-pop{
    width: 100%;
    height:100%;  
    position: fixed;
    z-index: 100000;
    top: 0px; 
}
.attr-pop .attr-pop-shade{
  width: 100%;
  opacity: 0.2;
  background: #888; 
  height:100%;
}


.attr-pop .attr-pop-content{
    width: 100%;
    min-height: 550rpx;
    height:auto;
    padding: 31.25rpx;
    background: #fff; 
    position: absolute;
    box-sizing: border-box;
    bottom:0px;
    z-index: 100000;
}
.attr-pop .attr-pop-content .img-info .attr-pop-close{
  float:right;
  font-size: 45rpx;
}
.attr-pop-close{
  padding:0 30rpx
}
.attr-pop .img-info{
    width: 687.5rpx;
    height: 177rpx;
    overflow: hidden;
    margin-bottom: 41.5rpx;
}

.attr-pop .img{
    float: left;
    height: 177rpx;
    width: 177rpx;
    background: #f4f4f4;
    margin-right: 31.25rpx;
}

.attr-pop .info{
    float: left;
    height: 177rpx;
    display: flex;
    align-items: center;
}
.attr-pop .pop-button{
  width:100%;
  background: green;
  border-radius: 10rpx;
  font-size:30rpx;
  font-weight: 600;
  color:#fff;
}
.attr-pop .p{
    font-size: 33rpx;
    color: #333;
    height: 33rpx;
    line-height: 33rpx;
    margin-bottom: 10rpx;
}

.attr-pop .a{
    font-size: 29rpx;
    color: #333;
    height: 40rpx;
    line-height: 40rpx;
}





.spec-con{
    width: 100%;
    height: auto;
    overflow: hidden;
}

.spec-con .name{
    height: 45rpx;
    margin-bottom: 22rpx;
    font-size: 29rpx;
    color: #333;
}

.spec-con .values{
    height: auto;
    margin-bottom: 31.25rpx;
    font-size: 0;
}
.spec-con .value{
    display: inline-block;
    height: 62rpx;
    padding: 0 35rpx;
    line-height: 56rpx;
    text-align: center;
    margin-right: 25rpx;
    margin-bottom: 16.5rpx;
    border: 1px solid #ccc;
    font-size: 25rpx;
    border-radius: 10rpx;
}

.spec-con .value.disable{
    border: 1px solid #ccc;
    color: #ccc;
}

.spec-con .value.selected{
    border: 1px solid #b4282d;
    color: #b4282d;
}
.number-item{
  margin-bottom: 50rpx;
}
.number-item .selnum{
    width: 322rpx;
    height: 71rpx;
    border: 1px solid #ccc;
    display: flex;
}

.number-item .cut{
    width: 93.75rpx;
    height: 100%;
    text-align: center;
    line-height: 65rpx;
}

.number-item .number{
    flex: 1;
    height: 100%;
    text-align: center;
    line-height: 68.75rpx;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    float: left;
}

.number-item .checkbox{
  margin-right: 20rpx;
}

.number-item .add{
    width: 93.75rpx;
    height: 100%;
    text-align: center;
    line-height: 65rpx;
}